<% content_for(:title) do %>Lista de personas<% end %>
<% content_for(:primary_command) do %>
<%= link_to '', new_person_path, class: 'btn btn-success glyphicon glyphicon-plus-sign' %>
<% end %>

<div class="row">
    <div class="col-sm-12 col-xs-12 col-md-12 table-responsive">
        <table class="table table-striped table-hover datatable">
          <tr>
            <th>Nombre</th>
            <th>Apellido Paterno</th>
            <th>Apellido Materno </th>
            <th>Tipo de Persona</th>
            <th>Membership</th>
            <th>Grado Academico</th>
            <th>Biografia</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>

        <% @people.each do |person| %>
        <tr>
            <td><%= person.name %></td>
            <td><%= person.last_name %></td>
            <td><%= person.second_last_name %></td>
            <td><%= person.person_type_id %></td>
            <td><%= person.membership %></td>
            <td><%= person.academic_degree %></td>
            <td><%= person.biography %></td>
            <td><%= link_to 'Show', person,class: 'btn btn-sm btn-primary' %></td>
            <td><%= link_to 'Edit', edit_person_path(person),class: 'btn btn-sm btn-warning' %></td>
            <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
        </tr>
        <% end %>
    </table>
</div>
</div>

<br />
