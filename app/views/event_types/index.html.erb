<% content_for(:title) do %>Tipos de Eventos<% end %>
<div class="row">
  <div class="col-sm-12 col-xs-12 col-md-6 col-lg-6 col-md-offset-3 col-lg-offset-3 table-responsive">
    <table class="table table-striped table-hover datatable">
      <tr>
        <th>Name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

      <% @event_types.each do |event_type| %>
      <tr>
        <td><%= event_type.name %></td>
        <td><%= link_to 'Show', event_type, class: 'btn btn-sm btn-primary' %></td>
        <td><%= link_to 'Edit', edit_event_type_path(event_type), class: 'btn btn-sm btn-warning' %></td>
        <td><%= link_to 'Destroy', event_type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
<% content_for(:primary_command) do %>
<div class="row">
  <div class="col-xs-2 col-sm-2 col-md-2 ">
    <%= link_to '', new_event_type_path, class: 'glyphicon glyphicon-plus-sign btn btn-success' %>
  </div>
</div>
<% end %>
