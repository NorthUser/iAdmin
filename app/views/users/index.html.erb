<% content_for(:title) do %>Lista de usuarios<% end %>
<% content_for(:primary_command) do %>
<%= link_to '', new_user_path, class: 'btn btn-success glyphicon glyphicon-plus-sign' %>
<% end %>
<div class="row">
  <div class="col-sm-12 col-xs-12 col-md-12 table-responsive">
    <table class="table table-striped table-hover datatable">
      <thead>
        <tr>
          <th>Username</th>
          <th>Password</th>
          <th>Email</th>
          <th>Person</th>
          <!-- <th></th> -->
          <th></th>
        </tr>

      </thead>
      <tbody>

        <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.password %></td>
          <td><%= user.email %></td>
          <td><%= user.person.full_name %></td>
          <!-- <td><%= link_to 'Show', user, class: 'btn btn-sm btn-primary' %></td> -->
          <td>
            <%= link_to 'Edit', edit_user_path(user),class: 'btn btn-sm btn-warning' %>
            <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Â¿Estas seguro de desactivar este usuario?' },class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
