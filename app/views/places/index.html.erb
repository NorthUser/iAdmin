<% content_for(:title) do %>Lugares aprobados para eventos <% end %>

<div class="row">
  <div class="col-sm-12 col-xs-12 col-md-12 table-responsive">
    <table class="table table-striped table-hover datatable">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

      <% @places.each do |place| %>
      <tr>
        <td><%= place.name %></td>
        <td><%= place.description %></td>
        <td><%= link_to 'Show', place, class: 'btn btn-sm btn-primary'  %></td>
        <td><%= link_to 'Edit', edit_place_path(place), class: 'btn btn-sm btn-warning' %></td>
        <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger'  %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<% content_for(:primary_command) do %>
<div class="row">
    <div class="col-xs-2 col-sm-2 col-md-2 ">
        <%= link_to '', new_place_path, class: 'glyphicon glyphicon-plus-sign btn btn-success' %>
    </div>
</div>
<% end %>
