<% content_for(:title) do %>Perfile<% end %>
<% content_for(:primary_command) do %>
<%= link_to '', new_profile_path, class: 'btn btn-success glyphicon glyphicon-plus-sign' %>
<% end %>
<div class="row">
  <div class="col-sm-12 col-xs-12 col-md-10 col-lg-10 col-md-offset-1 col-lg-offset-1 table-responsive">
    <table class="table table-striped table-hover datatable">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Creado</th>
          <th>Actualizado</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @profiles.each do |profile| %>
        <tr>
          <td><%= profile.name %></td>
          <td><%= datetime_natural profile.created_at %></td>
          <td><%= datetime_natural profile.updated_at %></td>
          <td>
            <%= link_to 'Editar', edit_profile_path(profile), class: 'btn btn-warning' %>
            <%= link_to 'Eliminar', profile, method: :delete, data: { confirm: 'Â¿Estas seguro de eliminar este registro?' }, class: 'btn btn-danger' %>
        </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
