<% content_for(:title) do %>Lista de Permisos por evento <% end %>

<div class="row">
  <div class="col-sm-12 col-xs-12 col-md-12 table-responsive">
    <table class="table table-striped table-hover datatable">
      <tr>
        <th>Event</th>
        <th>User</th>
        <th>Participant type</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

      <% @event_permissions.each do |event_permission| %>
      <tr>
        <td><%= event_permission.event_id %></td>
        <td><%= event_permission.user_id %></td>
        <td><%= event_permission.participant_type_id %></td>
        <td><%= link_to 'Show', event_permission, class: 'btn btn-sm btn-primary' %></td>
        <td><%= link_to 'Edit', edit_event_permission_path(event_permission), class: 'btn btn-sm btn-warning' %></td>
        <td><%= link_to 'Destroy', event_permission, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-warning' %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<% content_for(:primary_command) do %>
<div class="row">
  <div class="col-xs-2 col-sm-2 col-md-2 ">
    <%= link_to '', new_event_permission_path, class: 'glyphicon glyphicon-plus-sign btn btn-success' %>
  </div>
</div>
<% end %>
