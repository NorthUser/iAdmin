<%= form_for(@event) do |f| %>
<% if @event.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

  <ul>
    <% @event.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="row">
  <div class="block-gray col-xs-12 col-sm-12 col-md-10 col-lg-10 col-md-offset-1 col-lg-offset-1">
    <div class="form-group">
      <%= f.label :title %><br />
      <%= f.text_field :title, class: 'form-control', placeholder: 'Descripcion'  %>
    </div>
    <div class="form-group">
      <%= f.label :event_type_id %><br />
      <%= f.select :event_type_id, EventType.order(:name).map { |e| [e.name, e.id] }, {include_blank: true}, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :date %><br />
      <%= f.datetime_select :date, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :place_id %><br />
      <%= f.select :place_id, Place.order(:name).map { |e| [e.name, e.id] }, {include_blank: true}, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :summary %><br />
      <%= f.text_area :summary, class: 'form-control', rows: '3', placeholder: 'Descripcion'  %>
    </div>
  </div>
</div>

<div class="row">
  <div class="padding-top col-xs-12 col-sm-12 col-md-4 col-sm-offset-4 col-md-offset-4 ">
    <%= f.submit class: 'btn btn-primary'%>
  </div>
</div>
<% end %>
