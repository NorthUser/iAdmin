<div class="row">
  <div class="block-gray col-xs-12 col-sm-12 col-md-8 col-lg-8 col-ls-offset-2 col-md-offset-2 ">
    <%= form_tag({:controller => "events", :action => "upload"}, :method => "post", :multipart => true) do %>
    <%= file_field_tag "file[]",:multiple => true, :required => "required", :class => "btn " %>
    <%= hidden_field_tag "id", params[:id].to_i %>
    <div id="titulos" class="form-group">
      <input type="text" name="titulos[]" value="" class="form-control" placeholder="Titulo">
      <label>Nuevo Archivo</label>
    </div>
    <%= submit_tag "Upload", :class => "btn btn-success" %>
    <% end %>
  </div>
</div>
