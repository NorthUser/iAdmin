	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<strong>
					Participantes
				</strong>
				<div class="pull-right">
					<button class="btn btn-success btn-md participant_config"><span class="glyphicon glyphicon-plus-sign"></span></button>
				</div>
			</div>
			<div class="clearfix">&nbsp;</div>
			<%= render 'list_participants' %>
